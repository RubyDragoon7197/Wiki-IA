{
  "name": "Wiki-IA",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "forwardPorts": [3000, 5500],
  "portsAttributes": {
    "3000": {
      "label": "Backend API",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "5500": {
      "label": "Frontend",
      "onAutoForward": "notify",
      "visibility": "public"
    }
  },
  "postCreateCommand": "cd /workspaces/Wiki-IA/backend && npm install"
}
